@{
    Layout = "~/Views/Shared/_ManagerDashboard.cshtml";
}

@model QuizApp.ViewModels.DetailsTestViewModel

<div class="col-md-3">
    @Html.Partial("~/Views/Partials/_menu.cshtml")
    <div class="form-group">
        <a href="~/Test/Create" class="btn btn-success form-control">ახალი ტესტი</a>
    </div>
</div>

<div class="col-md-9">
    
    <div class="well">
        <p>ტესტის სახელი @Model.Test.Title</p>
        <p>სირთულე @Model.Test.Difficulty</p>
        <div class="list-group">
            @foreach (var question in Model.Question)
            { 
                <a href="#" class="list-group-item">@question.Title</a>
            }
        </div>
    </div>
</div>
