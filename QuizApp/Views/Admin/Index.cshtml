@{ 
    Layout = "~/Views/Shared/_ManagerDashboard.cshtml";
}

@model QuizApp.ViewModels.AdminViewModel

<div class="col-md-3">
    @Html.Partial("~/Views/Partials/_menu.cshtml")
    <div class="form-group">
        <a href="~/Genre/Create" class="btn btn-success form-control">ახალი კატეგორია</a>
    </div>
</div>

<div class="col-md-9">
    <form action="~/Admin" method="post">
        <div class="form-group">
            @Html.ValidationSummary()
        </div>

        <div class="form-group">
            <label>FullName</label>
            <input type="text" name="FullName" value="@Model.FullName" class="form-control" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="text" name="Email" value="@Model.Email" class="form-control" />
        </div>

        <div class="form-group">
            <label>Old Password</label>
            <input type="password" name="OldPassword" value="" class="form-control" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" name="Password" value="" class="form-control" />
        </div>

        <div class="form-group">
            <label>Repeat Password</label>
            <input type="password" name="RepeatPassword" value="" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" name="Save" value="შენახვა" class="btn btn-success" />
        </div>
    </form>
</div>