@model List<QuizApp.Models.Genre>
@{
    Layout = "~/Views/Shared/_ManagerDashboard.cshtml";
}

<div class="col-md-9">

    <div class="search" style="margin-bottom:20px;">

        <form action="~/Genre/Search" method="get">
            <div class="input-group">
                <input type="text" class="form-control" name="query">
                <span class="input-group-btn">
                    <button class="btn btn-default">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </form>

    </div>

    @if (Model.Count == 0)
    { 
        <div class="alert alert-danger">
            <p>ვერაფერი ვერ ვიპოვე სცადე თავიდან</p>
        </div>
    }

    @foreach (var genre in Model)
    {
        <div class="well">
            <div class="row">
                <div class="col-md-8 col-xs-6">
                    <h5>@genre.Title</h5>
                </div>
                <div class="col-md-4 col-xs-6">
                    <a href="~/Genre/Details/@genre.Id" class="btn btn-success pull-right">Details</a>
                </div>
            </div>
        </div>
    }
</div>