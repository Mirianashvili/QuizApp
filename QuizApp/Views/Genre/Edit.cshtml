@{ 
    Layout = "~/Views/Shared/_ManagerDashboard.cshtml";
}

@model QuizApp.Models.Genre

<div class="col-md-3">
    @Html.Partial("~/Views/Partials/_menu.cshtml")
    <div class="form-group">
        <a href="~/Genre/Create" class="btn btn-success form-control">ახალი კატეგორია</a>
    </div>
</div>

<div class="col-md-9">

    <form action="~/Genre/Edit" method="post" class="well">
        @Html.ValidationSummary()
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label>კატეგორია</label>
            <input type="text" name="Title" value="@Model.Title" class="form-control"/>
        </div>
        <div class="form-group">
            <input type="submit" value="განახლება" class="btn btn-success" />
        </div>
    </form>

</div>