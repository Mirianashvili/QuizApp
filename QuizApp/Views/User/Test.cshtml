@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model QuizApp.Models.Test

<div class="col-md-12">
    <p>ტესტი @Model.Title</p>
    <form action="~/User/BeginTest" method="post">
        <input type="hidden" value="@Model.Id" name="TestId"/>
        <div class="form-group">
            <label for="agree">გნებავთ თქვენი ქულის გამოჩანა საერთო რეიტინგში?</label>
            <input type="checkbox" name="Agree" id="agree"/>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="დაწყება"/>
        </div>
    </form>
</div>