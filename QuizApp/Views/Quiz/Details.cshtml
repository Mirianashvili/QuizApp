@{ 
    Layout = null;
}

@model QuizApp.Models.Quiz

<div>
    @Model.Name
    @Model.Difficulty
    @ViewBag.genre.Name
</div>

<h1>Add Question</h1>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/quizApp.js"></script>

<div>
    <input type="hidden" id="QuizId" value="@Model.Id" />
    <div>
        <label>Title</label>
        <input type="text" id="Title" />
    </div>
    <div>
        <label>Score</label>
        <input type="range" id="Score" min="1" max="5" dirname="Score"/>
    </div>
    <div>
        <button id="saveQuestion">Save</button>
    </div>
</div>

<div id="questions"></div>
