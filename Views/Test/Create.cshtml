@{
    Layout = "~/Views/Shared/_ManagerDashboard.cshtml";
}

@model List<QuizApp.Models.Genre>

<div class="col-md-3">
    @Html.Partial("~/Views/Partials/_menu.cshtml")
    <div class="form-group">
        <a href="~/Test/Create" class="btn btn-success form-control">ახალი ტესტი</a>
    </div>
</div>

<div class="col-md-9">

    <div class="well">
        <form action="~/Test/Create" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <label>სახელი</label>
                <input type="text" name="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label>სირთულე</label>
                <input type="number" min="1" max="10" value="5" name="Difficulty"/>
            </div>
            <div class="form-group">
                <label>კატეგორია</label>
                <select class="form-control" name="GenreId">
                    @foreach (var genre in Model)
                    {
                        <option value="@genre.Id">@genre.Title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="შენახვა" />
            </div>
        </form>
    </div>
    <!--end add test fragment-->
</div>
