@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model QuizApp.ViewModels.UserTestingViewModel

<form action="~/User/Next" method="post">
    <div class="form-group">
        <label>@Model.Question.Title</label>
    </div>
    <div class="form-group">
        @foreach (var answer in Model.Answers)
        {
            <div class="form-group">
                <label>
                    <input type="checkbox" name="Answers[]" value="@answer.Id"/> @answer.Title
                </label>
            </div>
        }
    </div>
    <input type="submit" value="შემდეგ" />
</form>
