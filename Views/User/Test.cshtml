@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model QuizApp.Models.Test

<div class="col-md-12">
    <p>ტესტი @Model.Title</p>
    <form action="~/User/BeginTest" method="post">
        <input type="hidden" value="@Model.Id" name="TestId"/>
        <div class="form-group">
            <input id="Remember" type="checkbox" value="1" name="Agree">
            <label form="Remember">მონაცემთა ბაზაში შენახვა</label>
            <input type="hidden" value="0" name="Agree" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="დაწყება"/>
        </div>
    </form>
</div>